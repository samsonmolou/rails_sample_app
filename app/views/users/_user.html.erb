<li class="border-gray-400 flex flex-row mb-2">
  <div class="shadow border select-none cursor-pointer bg-white dark:bg-gray-800 rounded-md flex flex-1 items-center p-4">
    <div class="flex flex-col justify-center items-center mr-4">
      <%= gravatar_for user, size: 50, h: 10, w: 10 %>
      <a href="#" class="block relative">
      </a>
    </div>
    <div class="flex-1 pl-1 md:mr-16">
      <div class="text-blue-500 hover:underline font-medium dark:text-white">
        <%= link_to user.name, user %>
        
      </div>
      <div class="text-gray-600 dark:text-gray-200 text-sm">
        <%= link_to user.email, user %>
      </div>
    </div>
    <div class="">
      <% if current_user.admin? && !current_user?(user) %>
          <%= link_to "delete", user, method: :delete, data: { confirm: "Confirm the delete of #{user.name}"}, class: "w-full inline-flex font-medium text-red-500 hover:undeline" %>
      <% end %>
    </div>
  </div>
</li>